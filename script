Template("treino.csv", row => 
newTrial("treino",
newController("DashedSentence", {s: row.estimulo, display: "in place", blankText: "+"})
.center()
.print()
.log()
.wait()
.remove()
,

newImage("Imagem1", row.imagema) 
.size(400, 400)
,
    
newImage("Imagem2", row.imagemb) 
.size(400, 400)
,
    
newCanvas("ladoAlado", 850,400)
.add(  0, 0, getImage("Imagem1"))
.add(450, 0, getImage("Imagem2"))
.center()
.print()
.log()
,
    
newSelector("EscolhaTarget")
.add(getImage("Imagem1"), getImage("Imagem2"))
.frame("solid 3px violet")
.shuffle()
.log()
,

newButton("botaoTarget", "Próximo")
.cssContainer({"margin-top":"1em"})
.center()
.print()
.wait(getSelector("EscolhaTarget").test.selected()
.failure(
newText("failure", "Por favor, escolha alguma das imagens antes de continuar.")
.cssContainer({"margin-top":"1em", "color":"red"})
.center()
.print())

))
.log("ID", "subjID")
.log("grupo", row.group)
.log("item", row.item)


);

